<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ventas">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f4f3"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btnBarCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_buscar"
                    android:text="Escanear"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#f4f4f3"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estilo"
                        android:textColor="#3f3f40"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Color"
                        android:textColor="#3f3f40"
                        android:textSize="20dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <EditText
                        android:id="@+id/sp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="#e2e2de"
                        android:hint="Estilo"
                        android:layout_weight="1"
                        android:textColor="#3f3f40"
                        android:textSize="25dp"
                        android:inputType="textCapCharacters"
                        />


                    <Spinner
                        android:id="@+id/sp"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:clickable="true" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f4f4f3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Acabado"
                        android:textColor="#3f3f40"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Marca"
                        android:textColor="#3f3f40"
                        android:textSize="20dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f4f4f3"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/sp3"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />


                    <Spinner
                        android:id="@+id/sp4"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Corrida"
                        android:textColor="#3f3f40"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/sp5"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#f4f4f3"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="Selecciona un punto"
                        android:textColor="#3f3f40"
                        android:textSize="30dp" />

                    <Spinner
                        android:id="@+id/punto"
                        style="@style/spinner_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"


                        ></Spinner>

                    <TextView
                        android:layout_width="1000dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#004d73" />
                    <Button
                        android:id="@+id/btnDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_buscar"
                        android:text="Imagen del producto"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:id="@+id/clienteTXT"
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:hint="Nombre del Cliente"
                            android:textAlignment="center"
                            android:textColor="#3f3f40"
                            android:layout_marginTop="10dp"
                            android:layout_height="30dp"
                            android:background="#e2e2de "
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f4f4f3"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:textColor="#3f3f40"
                            android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Unidades:"

                            />
                        <TextView
                            android:id="@+id/unidadesTXT"
                            android:textColor="#3f3f40"
                            android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"

                            />
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#3f3f40"
                            android:textSize="17dp"
                            android:text="Subtotal:"
                            />

                        <TextView
                            android:id="@+id/totalTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="#3f3f40"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="#f4f4f3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Existencia"
                            android:textColor="#3f3f40"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Precio"
                            android:textColor="#3f3f40"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Descuento"
                            android:textColor="#3f3f40"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            />



                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#f4f4f3"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/existenciasTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:textColor="#ff0000"
                            />

                        <TextView
                            android:id="@+id/precioTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#3f3f40"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/descuentoTXT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#3f3f40"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            />






                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#004d73"
                        android:gravity="center"
                        android:textColor="#3f3f40"
                        android:textSize="25dp"
                        />
                </LinearLayout>


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total a pagar:"
                    android:textColor="#3f3f40"
                    android:textSize="27dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/importeTXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/pesos"
                    android:text="0"
                    android:textSize="22dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="#3f3f40"
                    android:textStyle="bold"
                    />





                <TextView
                    android:layout_width="1000dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#004d73" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/btnMas"

                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:textSize="30dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/btn_buscar"
                        android:layout_marginLeft="10dp"
                        android:text="+"/>
                    <TextView
                        android:id="@+id/cantidadTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_marginLeft="7dp"
                        android:textColor="#ff0000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/btnMenos"
                        android:layout_width="60dp"
                        android:layout_marginLeft="7dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/btn_buscar"
                        android:layout_height="60dp"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:text="-"/>
                    <Button
                        android:id="@+id/btnAgregar"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="12dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:background="@drawable/btn_buscar"
                        android:text="AGREGAR" />


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#f4f4f3"
                    android:gravity="center"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/btnResumen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver productos"
                        android:background="@drawable/btn_buscar"
                        android:textColor="#ffffff"
                        />


                    <Button
                        android:id="@+id/btnSimilar"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VER SIMILARES"
                        android:background="@drawable/btn_buscar"
                        android:textColor="#ffffff"
                        />

                    <Button
                        android:id="@+id/btnOtras"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_buscar"
                        android:gravity="center"
                        android:text="VER EN OTRAS TIENDAS "
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                       />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#004d73"
                        android:gravity="center"
                        android:textColor="#3f3f40"
                        android:textSize="25dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar método de pago"
                        android:gravity="center"
                        android:textColor="#3f3f40"
                        android:textSize="25dp"
                        />





                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#f4f4f3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spBanco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/spinner_style"

                        />
                    <EditText
                        android:id="@+id/efectivoTXT"
                        android:layout_width="150dp"
                        android:textSize="25dp"
                        android:drawableLeft="@drawable/pesos"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:hint="0.0"
                        android:enabled="false"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#004d73"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#3f3f40"
                        android:textSize="25dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#f4f4f3"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar socio"
                        android:gravity="center"
                        android:textColor="#3f3f40"
                        android:textSize="25dp"
                        />

                    <Spinner
                        android:id="@+id/spSocio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/spinner_style"

                        />

                    <TextView
                        android:id="@+id/txtSaldoRestante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#3f3f40"
                        android:text=""
                        android:textSize="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#004d73"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#3f3f40"
                        android:textSize="25dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/formaPagoLabel"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textColor="#3f3f40"
                        android:textSize="20dp"
                        android:text="Forma de pago"
                        />

                    <TextView
                        android:id="@+id/montoPagoLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#3f3f40"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="Monto pagado"
                        />

                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#004d73"
                    android:gravity="center"
                    android:textColor="#3f3f40"
                    android:textSize="25dp"
                    />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#f4f4f3"
                        android:gravity="center"
                        android:orientation="vertical">

                    <Button
                        android:id="@+id/btnPagar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_buscar"
                        android:gravity="center"
                        android:text="PAGAR"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:enabled="false"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btnTicket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_buscar"
                        android:gravity="center"
                        android:enabled="true"
                        android:text="Ticket"
                        android:textAllCaps="false"
                        android:visibility="invisible"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="#004d73"
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:textColor="#3f3f40"
                            android:textSize="25dp"
                            />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>