<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:text="Selecciona tu tienda"
            android:textColor="#ffff"
            android:textColorLink="#004d73"
            android:background="#004d73"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="1000dp"
            android:layout_height="5dp"
            android:background="#004d73"
            />
        <Spinner
            android:id="@+id/spTiendas"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"></Spinner>
        <TextView
            android:layout_width="1000dp"
            android:layout_height="5dp"
            android:background="#004d73"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:text="Ingresa un numero de caja "
            android:textColor="#ffff"
            android:textColorLink="#004d73"
            android:background="#004d73"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="1000dp"
            android:layout_height="5dp"
            android:background="#004d73"
            />
        <EditText
            android:id="@+id/edtCaja"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:layout_width="1000dp"
            android:layout_height="5dp"
            android:background="#004d73"
            />

        <Button
            android:id="@+id/prueba"
            android:layout_width="350dp"
            android:background="@drawable/btn_buscar"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Aceptar" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:text="Selecciona tu Área"
            android:textColor="#ffff"
            android:visibility="invisible"
            android:background="#036ca1"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spZona"

            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"


            android:gravity="center"></Spinner>

        <CheckBox
            android:id="@+id/check"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Todas las áreas"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:visibility="invisible"

            />





    </LinearLayout>


</android.support.constraint.ConstraintLayout>